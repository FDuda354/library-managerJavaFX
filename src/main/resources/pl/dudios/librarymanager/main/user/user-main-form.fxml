<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.dudios.librarymanager.main.user.UserMainController">
    <top>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1200.0">
            <children>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logout" prefHeight="50.0"
                        prefWidth="100.0" text="Wyloguj"/>
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="booksButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="300.0"
                        text="Książki"/>
                <Button fx:id="readersButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="300.0"
                        text="Czytelnicy"/>
            </children>
        </VBox>
    </center>
</BorderPane>
